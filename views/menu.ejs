    <div class="heading">
      <h3>our menu</h3>
      <!-- <p><a href="">home </a> <span> / menu</span></p> -->
    </div>
    <section class="products">
      <h1 class="title">Menu</h1>

      <div class="box-container">
        <% if(data.length > 0) { data.forEach(function(data){ %>

        <form action="/addToCart" method="post" class="box">
          <button
            class="fas fa-shopping-cart"
            type="submit"
            name="id"
            value="<%=data.id%>"
          ></button>
          <img src="images/food.jpeg" alt="" />
          <a href="category.html" class="cat"><%= data.type %></a>
          <div class="name"><%= data.title %></div>
          <div class="flex">
            <div class="price">
              <span>BDT</span><%= data.price %><span>/-</span>
            </div>
            <input
              type="number"
              name="qty"
              class="qty"
              min="1"
              max="99"
              value="1"
              onkeypress="if(this.value.length == 2) return false;"
            />
          </div>
        </form>

        <% }); } %>
      </div>
    </section>

    

