    <style>
      .cart {
        position: relative;
        display: inline-block;
        width: 3rem;
        /* height: 28px; */
        height: auto;
        /* overflow: hidden; */
        .material-icons {
          position: relative;
          top: .4rem;
          z-index: 1;
          font-size: 24px;
          color: black;
        }
        .count {
          position: absolute;
          top: -.5rem;
          right: 0;
          z-index: 2;
          font-size: 11px;
          border-radius: 50%;
          background: #d60b28;
          width: 16px;
          height: 16px;
          line-height:16px;
          display: block;
          text-align: center;
          color: white;
          font-family: 'Roboto', sans-serif;
          font-weight: bold;
        }
      }
    </style>
