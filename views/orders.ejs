    <section class="orders">
      <p class="title"><span>Placed Orders</span></p> 


      <table class="tbl" style="margin-bottom: 5rem; width: 80%;">
        <%if(data.length > 0){%>
      <tr>
        <th>Order ID</th>
        <th>Created At</th>
        <th>Customer Info</th>
        <th>Delivery Info</th>
        <th>Order Info</th>
        <th>Payment Info</th>
        <th>Status</th>
      </tr>
      <%data.forEach(function(data){%>
      <tr>
        <td><%=data.id%></td>
        <td><%=data.createdAt%></td>
        <td>
          <p><span style="font-weight: bold;">Name: </span><span><%= user.firstname %></span></p>
          <p><span style="font-weight: bold;">Phone: </span><span><%= user.phone %></span></p>
        </td>
        <td><p><span><%= data.address %></span></p></td>
        <td><p><span><%= data.description %></span></p>
          <p><span style="font-weight: bold;">Price breakdown : </span><span><%= data.price_breakdown %></span></p>
        </td>
        <td>
          <p><%=data.total%></p>
          <p><span style="font-weight: bold;">Paid</span></p>
        </td>
        <td><%=data.status%></td>
    </tr>         
    <%});} else{%>
      <section class="products" style="display: flex; justify-content: center; align-items: center;">
        <p style="font-size: 2rem;">You haven't ordered anything yet.<br>Browse our <a href="menu" style="color: blue;">menu </a> to order your favorite food.</p>
      </section>
    <%}%> 
  </table>

